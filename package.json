{
    "name": "chromeshack",
    "version": "1.7.0",
    "description": "Collection of scripts for Shacknews.",
    "scripts": {
        "clean": "rm -rf dist",
        "build:dev": "npm run clean && npx webpack-cli --config ./utils/webpack.config.dev.js --watch",
        "build:prod": "npm run clean && npx webpack-cli --config ./utils/webpack.config.prod.js && npm run zip",
        "webext": "npx web-ext run -s dist -u https://shacknews.com/chatty",
        "zip": "npx web-ext -s ./dist -a ./artifacts build",
        "lint": "npm run build && npx web-ext -s ./dist lint",
        "sign": "npm run build && npx web-ext -s ./dist -a ./artifacts sign"
    },
    "author": "Adam Hughes",
    "email": "arhughes@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.7",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-env": "^7.8.7",
        "@babel/preset-typescript": "^7.8.3",
        "@types/chrome": "0.0.75",
        "@typescript-eslint/eslint-plugin": "^2.23.0",
        "@typescript-eslint/parser": "^2.23.0",
        "concurrently": "^5.1.0",
        "copy-webpack-plugin": "^5.1.1",
        "css-loader": "^1.0.1",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.10.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-json": "^2.1.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "license-checker-webpack-plugin": "^0.1.4",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.1",
        "prettier": "^1.19.1",
        "resolve-url-loader": "^3.1.1",
        "sass-loader": "^8.0.2",
        "style-loader": "^0.23.1",
        "terser": "^4.6.6",
        "terser-webpack-plugin": "^2.3.5",
        "ts-loader": "^5.3.1",
        "typescript": "^3.8.3",
        "wait-on": "^4.0.1",
        "web-ext": "^4.1.0",
        "webpack": "^4.26.1",
        "webpack-chrome-extension-reloader": "^1.3.0",
        "webpack-cli": "^3.1.2",
        "webpack-extension-reloader": "^1.1.4",
        "webpack-merge": "^4.2.2",
        "zip-webpack-plugin": "^3.0.0"
    },
    "dependencies": {
        "@types/jquery": "^3.3.33",
        "dompurify": "^2.0.8",
        "jquery": "^3.4.1",
        "luxon": "^1.22.0",
        "react": "^16.6.3",
        "react-dom": "^16.6.3",
        "webextension-polyfill": "^0.6.0"
    }
}

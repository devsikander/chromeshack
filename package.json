{
    "name": "chromeshack",
    "version": "1.6.9",
    "description": "Collection of scripts for Shacknews.",
    "repository": "https://github.com/latestchatty/chromeshack",
    "scripts": {
        "extlint": "npx web-ext lint -s ./dist",
        "webext": "npx web-ext run -s dist -u https://shacknews.com/chatty",
        "lint": "npx eslint --fix ./src/**/*.{ts,tsx}",
        "zip": "npx web-ext build -s ./dist -a ./artifacts -o",
        "sign": "npx web-ext sign -s ./dist -a ./artifacts",
        "pack": "node ./utils/packsrc.js",
        "build:dev": "npx webpack-cli --config ./utils/webpack.config.dev.js --watch --info-verbosity verbose",
        "build:prod": "npx webpack-cli --config ./utils/webpack.config.prod.js --info-verbosity verbose",
        "build:pack": "npm run build:prod && npm run zip && npm run pack"
    },
    "author": "Adam Hughes",
    "email": "arhughes@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "@babel/preset-typescript": "^7.9.0",
        "@types/chrome": "0.0.75",
        "@types/dompurify": "^2.0.1",
        "@types/jquery": "^3.3.36",
        "@types/luxon": "^1.22.0",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.7",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "archiver": "^4.0.1",
        "cache-loader": "^4.1.0",
        "css-loader": "^1.0.1",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-json": "^2.1.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.1",
        "filemanager-webpack-plugin": "^2.0.5",
        "fork-ts-checker-webpack-plugin": "^4.1.3",
        "happypack": "^5.0.1",
        "license-checker-webpack-plugin": "^0.1.4",
        "mini-css-extract-plugin": "^0.9.0",
        "prettier": "^2.0.5",
        "terser": "^4.6.13",
        "terser-webpack-plugin": "^2.3.6",
        "ts-loader": "^7.0.2",
        "typescript": "^3.8.3",
        "web-ext": "^4.2.0",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-extension-reloader": "^1.1.4",
        "webpack-merge": "^4.2.2"
    },
    "dependencies": {
        "dompurify": "^2.0.10",
        "jquery": "^3.5.0",
        "luxon": "^1.23.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "ts-debounce": "^2.0.1",
        "webextension-polyfill-ts": "^0.15.0"
    }
}

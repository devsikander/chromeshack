{
    "name": "chromeshack",
    "version": "1.6.9",
    "description": "Collection of scripts for Shacknews.",
    "repository": "https://github.com/latestchatty/chromeshack",
    "scripts": {
        "clean": "rm -rf dist",
        "build:dev": "npx webpack-cli --config ./utils/webpack.config.dev.js --watch",
        "build:prod": "npm run clean && npx webpack-cli --config ./utils/webpack.config.prod.js && npm run zip",
        "webext": "npx web-ext run -s dist -u https://shacknews.com/chatty",
        "zip": "npx web-ext build -s ./dist -a ./artifacts -o",
        "lint": "npm run build && npx web-ext lint -s ./dist",
        "sign": "npm run build && npx web-ext sign -s ./dist -a ./artifacts"
    },
    "author": "Adam Hughes",
    "email": "arhughes@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "@babel/preset-typescript": "^7.9.0",
        "@types/chrome": "0.0.75",
        "@types/jquery": "^3.3.34",
        "@types/luxon": "^1.22.0",
        "@types/react": "^16.9.32",
        "@types/react-dom": "^16.9.6",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "copy-webpack-plugin": "^5.1.1",
        "css-loader": "^1.0.1",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.10.1",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-json": "^2.1.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.1",
        "license-checker-webpack-plugin": "^0.1.4",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.1",
        "prettier": "^2.0.4",
        "resolve-url-loader": "^3.1.1",
        "sass-loader": "^8.0.2",
        "style-loader": "^0.23.1",
        "terser": "^4.6.10",
        "terser-webpack-plugin": "^2.3.5",
        "ts-loader": "^5.3.1",
        "typescript": "^3.8.3",
        "web-ext": "^4.1.0",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.1.2",
        "webpack-extension-reloader": "^1.1.4",
        "webpack-merge": "^4.2.2"
    },
    "dependencies": {
        "dompurify": "^2.0.8",
        "jquery": "^3.4.1",
        "luxon": "^1.23.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "ts-debounce": "^2.0.1",
        "webextension-polyfill": "^0.6.0"
    }
}
